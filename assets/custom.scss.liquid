// 1. Header


// 1.1 TopBar

.topbar {
  padding-top: 5px;
  padding-bottom: 5px;
  background-image: -webkit-linear-gradient(top, #0c0c0c 0%, #3e3e3e 100%);
  background-image: -o-linear-gradient(top, #0c0c0c 0%, #3e3e3e 100%);
  background-image: linear-gradient(to bottom, #0c0c0c 0%, #3e3e3e 100%);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FF0C0C0C', endColorstr='#FF3E3E3E', GradientType=0);
  color: #ffffff;

  a {
    color: #ffffff;
    &:hover,
    &:focus {

    }
  }

  .container {
    .row {
      display: -webkit-box;
      display: -webkit-flex;
      display: -moz-box;
      display: -ms-flexbox;
      display: flex;

      -webkit-box-align: center;
      -webkit-align-items: center;
      -moz-box-align: center;
      -ms-flex-align: center;
      align-items: center;
    }
  }
}

.topbar-notification {

}

.topbar-notification__link {

}

.topbar-notification__message {
  display: inline-block;
  text-align: center;
  font-weight: bold;
  strong {
    display: block;
    font-size: 16px;
  }
  small {
    display: block;
    font-size: 10px;
    color: #f9bf3a;
