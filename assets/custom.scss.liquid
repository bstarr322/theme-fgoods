  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;

  -webkit-box-align: center;
  -webkit-align-items: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  align-items: center;

  .icon {
    width: 16px;
    height: 16px;
    margin-top: -2px;
    margin-right: 3px;
  }
}

